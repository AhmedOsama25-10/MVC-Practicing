@model List<CartViewModel>

@{

    ViewData["Title"] = "Index";
    Layout = "_Layout2";

}
<div class="cartsParent">
    @foreach (var cart in Model)
    {
        <div class="CartsContainer">

            <h1>Recipt</h1>

            <hr />

            <dl class="">

                <dt class="">
                    @Html.DisplayNameFor(model => cart.ProductName)
                </dt>
                <dd class="">
                    @Html.DisplayFor(model => cart.ProductName)
                </dd>
                <dt class="">
                    @Html.DisplayNameFor(model => cart.Username)
                </dt>
                <dd class="">
                    @User.Identity.Name
                </dd>
                <dt class="">
                    @Html.DisplayNameFor(model => cart.ProductPrice)
                </dt>
                <dd class="">
                    @Html.DisplayFor(model => cart.ProductPrice)
                </dd>

            </dl>
            <a asp-action="Buy" asp-controller="Cart" class="btn btn-primary"
               asp-route-Id="@cart.ID"
               asp-route-ProductName="@cart.ProductName"
               asp-route-ProductPrice="@cart.ProductPrice"
               asp-route-Username="@User.Identity.Name"> Confirm </a>
        </div>
    }


</div>


