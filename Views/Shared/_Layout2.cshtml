<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mobi_Shop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/Index.css" />

</head>
<body>

        <header>
            <nav>
                <div class="container2">
                    <img class="logo" src="~/images/MyImages/letter-s-with-fast-thunder-shape-logo-vector_23987-210 (1).png" />

                    <ul class="leftside">

                        <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                        <li><a asp-action="Index" asp-controller="Category">Categories</a></li>
                        <li><a asp-action="Index" asp-controller="Product">Products</a></li>
                        <li>  <a asp-action="Index" asp-controller="Cart">Cart</a> </li>
                        <div class="numInCart">@ViewBag.Num</div>
                        @if (User.IsInRole("Admin"))
                        {
                            <li><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>

                        }
                    </ul>
                    <ul class="rightside">
                        @if (User.Identity.IsAuthenticated == false)
                        {
                            <li><a asp-action="Login" asp-controller="Account">Login</a></li>
                            <li><a asp-action="Register" asp-controller="Account">Register</a></li>
                        }
                        else
                        {
                            <li>@User.Identity.Name</li>
                            <li><a asp-action="Logout" asp-controller="Account">Logout</a></li>

                        }



                    </ul>
                </div>
            </nav>
