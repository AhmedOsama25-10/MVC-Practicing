@model Mobi__Shop.Models.ProductViewModel

@{
    ViewData["Title"] = "Add";
}
<div class="AddContainer">
    <h2>Add Product</h2>

    <hr />
    <div class="InputsParent">

        <form asp-action="Add" enctype="multipart/form-data">

            <div class="form-group">
                <label asp-for="Name" class=""></label>
                <input asp-for="Name" class="" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class=""></label>
                <input asp-for="Price" class="" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock" class=""></label>
                <input asp-for="Stock" class="" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductionYear" class=""></label>
                <input asp-for="ProductionYear" class="" />
                <span asp-validation-for="ProductionYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrandName" class=""></label>
                <input asp-for="BrandName" class="" />
                <span asp-validation-for="BrandName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategotyID" class=""></label>
                <input asp-for="CategotyID" class="" />
                <span asp-validation-for="CategotyID" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input asp-for="Image" class="form-control-file" />
                <label asp-for="Image" class=""> Choose Image...</label>



            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>


        </form>
    </div>

</div>



@section Scripts {
    <script>

        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            })
        })

        $(".InputsParent").slideDown(2000);


    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}


