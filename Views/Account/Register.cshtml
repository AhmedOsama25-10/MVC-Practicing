@model Mobi_Shop.Models.RegisterViewModel
@{
    Layout = "_Layout2";
 }
<div class="RegContainer">

    <h2>New Account</h2>

    <hr />
        <div class="InputsParent">
            <form asp-action="Register">
                <div class="form-group">
                    <label asp-for="UserName" class=""></label>
                    <input asp-for="UserName" class="" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class=""></label>
                    <input asp-for="Email" class="" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class=""></label>
                    <input asp-for="Password" class="" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class=""></label>
                    <input asp-for="ConfirmPassword" class="" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class=""></label>
                    <input asp-for="Address" class="" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Country" class=""></label>
                    <input asp-for="Country" class="" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class=""></label>
                    <input asp-for="Phone" class="" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input class="btn btn-success" type="submit" value="Create" />
                </div>
                
            </form>
        </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>
    $(function () {

        

        $(".InputsParent").slideDown(2000);
       

    })
</script>
}